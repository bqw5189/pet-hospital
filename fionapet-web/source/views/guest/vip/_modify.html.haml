.portlet.light.bordered
  .portlet-title
    .caption
      %i.icon-settings.font-dark
      %span.caption-subject.font-dark.sbold.uppercase 会员信息

  .portlet-body.form
    .form-body
      .row
        .col-md-4
          = partial :'layouts/inputs/text', :locals => {:fieldName => '会员编号', :maxlength => '32', :required => 'true'}

        .col-md-4
          = partial :'layouts/inputs/text', :locals => {:fieldName => '会员姓名', :maxlength => '32', :required => 'true'}

        .col-md-4
          .form-group
            %label.control-label 会员性别
            .radio-list
              %label.radio-inline
                %input#optionsRadios25{:checked => "checked", :name => "optionsRadios", :type => "radio", :value => "option1"}/
                男
              %label.radio-inline
                %input#optionsRadios26{:checked => "checked", :name => "optionsRadios", :type => "radio", :value => "option2"}/
                女

      .row
        .col-md-4
          = partial :'layouts/inputs/date', :locals => {:fieldName => '出生日期', :maxlength => '32', :required => 'true'}

        .col-md-4
          = partial :'layouts/inputs/text', :locals => {:fieldName => '会员年龄', :maxlength => '32', :required => 'true'}

        .col-md-4
          = partial :'layouts/inputs/text', :locals => {:fieldName => '会员电话', :maxlength => '32', :required => 'true'}

      .row
        .col-md-4
          = partial :'layouts/inputs/text', :locals => {:fieldName => '固定电话', :maxlength => '32', :required => 'true'}

        .col-md-8
          = partial :'layouts/inputs/text', :locals => {:fieldName => '联系邮箱', :maxlength => '32', :required => 'true'}

      .row
        .col-md-12
          = partial :'layouts/inputs/text', :locals => {:fieldName => '联系地址', :maxlength => '32', :required => 'true'}

      .row
        .col-md-4
          .form-group
            %label.control-label 会员等级
            %select.form-control
              %option 普通会员
              %option VIP会员

        .col-md-4
          .form-group
            %label.control-label 会员状态
            %select.form-control
              %option 正常
              %option 禁用

        .col-md-4
          = partial :'layouts/inputs/date', :locals => {:fieldName => '账户金额', :maxlength => '32', :required => 'true'}

      .row
        .col-md-12
          = partial :'layouts/inputs/textarea', :locals => {:fieldName => '备注', :maxlength => '32', :required => 'true'}

      .row
        .col-md-4
          = partial :'layouts/inputs/text', :locals => {:fieldName => '登记日期', :maxlength => '32', :required => 'true'}

        .col-md-4
          = partial :'layouts/inputs/date', :locals => {:fieldName => '最后消息日期', :maxlength => '32', :required => 'true'}

