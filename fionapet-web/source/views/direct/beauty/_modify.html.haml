/ BEGIN SAMPLE FORM PORTLET
.row
  .col-md-3
    .portlet
      .portlet-title
        .caption
          %i.fa.fa-user
          会员信息
        .actions
          %a.btn.btn-circle.btn-default.btn-sm{:href => "javascript:;"}
            %i.fa.fa-plus
            选择宠物

          %a.btn.btn-circle.btn-default.btn-sm{:href => "javascript:;"}
            %i.fa.fa-remove
            新增宠物

      .portlet-body.portlet-empty
        = partial 'views/commons/pet_header'

  .col-md-9
    .tabbable-line
      %ul.nav.nav-tabs
        %li.active
          %a{"data-toggle" => "tab", :href => "//#beauty_basic"} 基本信息

        %li
          %a{"data-toggle" => "tab", :href => "//#beauty_product"} 服务项目

      .tab-content
        #beauty_basic.tab-pane.active
          .row
            .col-md-4
              = partial :'layouts/inputs/text', :locals => { :fieldName => '服务单号', :maxlength => '16'}

            .col-md-4
              = partial :'layouts/inputs/text', :locals => { :fieldName => '总项', :maxlength => '16'}

            .col-md-4
              = partial :'layouts/inputs/text', :locals => { :fieldName => '总金额', :maxlength => '16'}

          .row
            .col-md-4
              = partial :'layouts/inputs/text', :locals => { :fieldName => '服务师', :maxlength => '16'}

            .col-md-4
              = partial :'layouts/inputs/text', :locals => { :fieldName => '服务助理', :maxlength => '16'}

          .row
            .col-md-12
              = partial :'layouts/inputs/textarea', :locals => { :fieldName => '备注', :maxlength => '16'}

        -#服务项目
        #beauty_product.tab-pane
          .portlet
            .portlet-title
              .caption

              .actions
                %a.btn.btn-circle.btn-default.btn-sm{:href => "javascript:;", "ng" => {"click":"productmodal()"}}
                  %i.fa.fa-copy
                    添加服务项目

            .portlet-body.portlet-empty
              %table.table.table-striped.table-hover.table-bordered
                %thead
                  %tr
                    %th
                      %input.group-checkable{:type => "checkbox"}/
                    %th 操作
                    %th
                    - ['编码', '名称', '规格', '单价', '数量', '销售单位', '金额', '条码'].each do |fieldName|
                      %th #{fieldName}

                %tbody
                  %tr.odd.gradeX{ "ng-repeat" => @page_id + " in " +@page_id+ "s" }
                    %td
                      %input.checkboxes{:type => "checkbox", 'ng': {'model': 'selection[' +@page_id+ '.id]', 'change': 'selectChange()'} }/
                    %td

                    - ['编码', '名称', '规格', '单价', '数量', '销售单位', '金额', '条码'].each do |fieldName|
                      %td
                        = bind @page_id, (@fields[fieldName] || 'error')

