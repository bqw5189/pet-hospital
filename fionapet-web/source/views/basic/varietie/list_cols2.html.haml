- page '宠物品种管理', 'varietie'

- @prefix = "basic/"

- fields = data[@page_id].fields

- listFields = data[@page_id].listFields

/ 页面按钮
- content_for :toolbar do
  %button.btn.btn-circle.btn-default.btn-sm{:href => "javascript:;", 'ng': {'click':'update()'}}
    %i.fa.fa-plus
    增加
  %button.btn.btn-circle.red-sunglo.btn-sm{:href => "javascript:;", 'ng': {'click':'removes()', 'disabled': 'isRemoves'} }
    %i.fa.fa-remove
    删除

- content_for :outline_title do
  种类

- content_for :outline_toolbar do
  %a.btn.btn-circle.btn-default.btn-sm{:href => "javascript:;", "ng":{ "click" => "updatetype()"}}
    %i.fa.fa-plus
    增加

  %a.btn.btn-circle.red-sunglo.btn-sm{:href => "javascript:;"}
    %i.fa.fa-remove
    删除

- content_for :outline_body do
  %div.list-group
    %a.list-group-item{:href => 'javascript:;'}
      小型犬(犬科)
      %span.badge.badge-default 3
    %a.list-group-item{:href => 'javascript:;'}
      中型犬(犬科)
      %span.badge.badge-success 11
    %a.list-group-item{:href => 'javascript:;'}
      大型犬(犬科)
      %span.badge.badge-danger new
    %a.list-group-item{:href => 'javascript:;'}
      猫(猫科)
      %span.badge.badge-warning 4

/ Table 头
- content_for :theader do
  - listFields.each do |field|
    %th #{field.aliasName || field.fieldName}

/ Table 正文
- content_for :tbody do
  - listFields.each do |column|
    %td
      = bind @page_id, (column.fieldKey || fields[column.fieldName] || 'error')

/ Modal
- modal "宠物品种", "varietie"

= partial :'layouts/partials/modal' do
  = partial 'modify'

/ Modal
- modal "宠物种类", "type"

= partial :'layouts/partials/modal' do
  = partial 'type'
