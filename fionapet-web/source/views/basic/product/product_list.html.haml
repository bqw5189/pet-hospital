---
layout: "cols2_light"
---
- page '商品与服务管理', 'product'

-# 大纲部分

- content_for :outline_toolbar do
  = partial :'layouts/buttons/insert', :locals => {:click => 'producttypeinsert()', :disabled => "!selectedId"}
  = partial :'layouts/buttons/remove', :locals => {:click => 'producttyperemove()', :disabled => "!selectedId"}

-#商品&服务类型
= partial 'views/commons/nav_tree', :locals => {:sidename => "商品&服务", :sidefieldname=> 'name'}

-# 主体部分
- content_for :toolbar do
  = partial :'layouts/buttons/insert', :locals => {:disabled => "!selectedId"}
  = partial :'layouts/buttons/removes'

- content_for :theader do
  - @page.listFields.each do |field|
    %th #{field.aliasName || field.fieldName}

- content_for :tbody do
  - @page.listFields.each do |column|
    %td
      = bind @page_id, (column.fieldKey || @fields[column.fieldName] || 'error')

-#表格(搜索+分页)
= partial :'layouts/table/table_full'

/ Modal
- modal '商品服务管理', 'product'

= partial :'layouts/partials/modal-full' do
  = partial 'modify'


/ Modal
- modal "服务商品分类", "producttype"

= partial :'layouts/partials/modal' do
  = partial 'producttype'
