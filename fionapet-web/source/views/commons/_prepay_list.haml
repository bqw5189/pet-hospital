-# 寄养/住院期间, 预付金记录
.portlet
  .portlet-title
    .caption
      %i.fa.fa-gift
      总金额:, 总项数:
    .actions
      %a.btn.btn-circle.btn-default.btn-sm{:href => "javascript:;", "ng" =>{"click":"prepaymodal()"}}
        %i.fa.fa-plus
        充值预付金

  .portlet-body.portlet-empty
    %table.table.table-striped.table-hover.table-bordered
      %thead
        %tr
          %th
            %input.group-checkable{:type => "checkbox"}/
          %th 操作
          %th
          - ['操作时间', '金额', '操作员'].each do |fieldName|
            %th #{fieldName}

      %tbody
        %tr.odd.gradeX{ "ng-repeat" => @page_id + " in " +@page_id+ "s" }
          %td
            %input.checkboxes{:type => "checkbox", 'ng': {'model': 'selection[' +@page_id+ '.id]', 'change': 'selectChange()'} }/
          %td

          - ['操作时间', '金额', '操作员'].each do |fieldName|
            %td
              = bind @page_id, (@fields[fieldName] || 'error')
