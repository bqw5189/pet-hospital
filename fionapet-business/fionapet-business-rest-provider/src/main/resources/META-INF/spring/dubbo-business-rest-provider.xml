<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--uncomment this if you want to test dubbo's monitor-->
    <dubbo:monitor protocol="registry"/>

    <!-- here we demonstrate both annotation-based and xml-based configs -->
    <dubbo:annotation package="com.fionapet.business.facade"/>

    <!-- use tomcat server -->
    <dubbo:protocol name="rest" threads="500" contextpath="api/v2" server="tomcat" accepts="500"
                    extension="com.fionapet.business.extension.TraceInterceptor,
                    com.fionapet.business.extension.TraceFilter,
                    com.fionapet.business.extension.ClientTraceFilter,
                    com.fionapet.business.extension.DynamicTraceBinding,
                    com.fionapet.business.extension.CustomExceptionMapper,
                    com.alibaba.dubbo.rpc.protocol.rest.support.LoggingFilter"/>


    <!-- pet race api -->
    <dubbo:service interface="com.fionapet.business.facade.PetRaceRestService" ref="petRaceRestService"
                   protocol="rest" validation="true" timeout="2000" connections="100"/>

    <bean id="petRaceRestService" class="com.fionapet.business.facade.PetRaceRestServiceImpl">
        <property name="petRaceService" ref="petRaceService"/>
    </bean>

    <dubbo:reference id="petRaceService" interface="com.fionapet.business.service.PetRaceService"/>

    <dubbo:service interface="com.fionapet.business.facade.PetSmallRaceRestService" ref="petSmallRaceRestService"
                   protocol="rest" validation="true" timeout="2000" connections="100"/>

    <bean id="petSmallRaceRestService" class="com.fionapet.business.facade.PetSmallRaceRestServiceImpl">
        <property name="petSmallRaceService" ref="petSmallRaceService"/>
    </bean>

    <dubbo:reference id="petSmallRaceService" interface="com.fionapet.business.service.PetSmallRaceService"/>
    <!-- pet race api -->

    <dubbo:reference id="accountService" interface="cn.fiona.pet.account.service.AccountService"/>

    <!--warehouse api -->
    <dubbo:service interface="com.fionapet.business.facade.WarehouseRestService" ref="warehouseRestService"
                   protocol="rest" validation="true" timeout="2000" connections="100"/>

    <bean id="warehouseRestService" class="com.fionapet.business.facade.WarehouseRestServiceImpl">
        <property name="warehouseService" ref="warehouseService"/>
    </bean>

    <dubbo:reference id="warehouseService" interface="com.fionapet.business.service.WarehouseService"/>

    <!-- warehouse api-->
    <!--itemcate api -->
    <dubbo:service interface="com.fionapet.business.facade.ItemCateRestService" ref="itemCateRestService"
                   protocol="rest" validation="true" timeout="2000" connections="100"/>

    <bean id="itemCateRestService" class="com.fionapet.business.facade.ItemCateRestServiceImpl">
        <property name="itemCateService" ref="itemCateService"/>
    </bean>

    <dubbo:reference id="itemCateService" interface="com.fionapet.business.service.ItemCateService"/>

    <!-- itemcate api-->
    <!--businesCate api -->
    <dubbo:service interface="com.fionapet.business.facade.BusinesCateRestService" ref="businesCateRestService"
                   protocol="rest" validation="true" timeout="2000" connections="100"/>

    <bean id="businesCateRestService" class="com.fionapet.business.facade.BusinesCateRestServiceImpl">
        <property name="businesCateService" ref="businesCateService"/>
    </bean>

    <dubbo:reference id="businesCateService" interface="com.fionapet.business.service.BusinesCateService"/>

    <!-- businesCate api-->

	<!--经销商 api -->
    <dubbo:service interface="com.fionapet.business.facade.DealerRestService" ref="dealerRestService"
                   protocol="rest" validation="true" timeout="2000" connections="100"/>

    <bean id="dealerRestService" class="com.fionapet.business.facade.DealerRestServiceImpl">
        <property name="dealerService" ref="dealerService"/>
    </bean>

    <dubbo:reference id="dealerService" interface="com.fionapet.business.service.DealerService"/>
    <!--经销商 api -->


	<!--商品和服务类型 api -->
    <dubbo:service interface="com.fionapet.business.facade.ItemTypeRestService" ref="itemTypeRestService"
                   protocol="rest" validation="true" timeout="2000" connections="100"/>

    <bean id="itemTypeRestService" class="com.fionapet.business.facade.ItemTypeRestServiceImpl">
        <property name="itemTypeService" ref="itemTypeService"/>
    </bean>

    <dubbo:reference id="itemTypeService" interface="com.fionapet.business.service.ItemTypeService"/>
    <!--商品和服务类型 api -->

</beans>
